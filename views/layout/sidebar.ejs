<div class="sidebar">
  <div class="box auth">
    <% if(!user.id && !user.login){ %>

    <form method="POST" class="login">
      <h2>Login</h2>
      <div class="form-group">
        <label for="login-login">Login</label>
        <input type="text" id="login-login" name="login" />
      </div>
      <div class="form-group">
        <label for="login-password">Password</label>
        <input type="password" id="login-password" name="password" />
      </div>
      <div class="buttons">
        <button class="switch-button secondary-inverse">Register</button>
        <button class="login-button">Login</button>
      </div>
    </form>

    <form method="POST" class="register">
      <h2>Register</h2>
      <div class="form-group">
        <label for="register-login">Login</label>
        <input type="text" id="register-login" name="login" />
      </div>
      <div class="form-group">
        <label for="register-password">Password</label>
        <input type="password" id="register-password" name="password" />
      </div>
      <div class="form-group">
        <label for="register-password">Repeat password</label>
        <input
          type="password"
          id="register-password-confirm"
          name="passwordConfirm"
        />
      </div>
      <div class="buttons">
        <button class="switch-button secondary-inverse">Login</button>
        <button class="register-button">Register</button>
      </div>
    </form>
    <% } else { %>
    <ul>
      <li>Hello, <a href="/users/<%= user.login %>"><%= user.login %></a> !</li>
      <li><a href="/post/add">Add Post</a></li>
      <li><a href="/api/auth/logout">Logout</a></li>
    </ul>
    <% } %>
  </div>
  <div class="box">
    box2
  </div>
</div>
