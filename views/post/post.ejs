<%- include('../layout/header'); -%>

<div class="main">
  <div class="container">
    <div class="content">
      <div class="post">
        <div class="top">
          <h2><%= post.title %></h2>
        </div>
        <div class="body">
          <%- post.body %>
        </div>
        <div class="bottom">
          <div class="author">Autor: <a href="/">Author</a></div>
        </div>
      </div>

      <div class="comments" id="<%= post.id %>">
        <h3>Comments</h3>
        <div class="comment-list">
          <%- include('../layout/comments', {items: comments}) -%>
          <form class="comment">
            <textarea name="body"></textarea>
            <div class="buttons">
              <button class="cancel secondary">Cancel</button>
              <button class="send">Post</button>
            </div>
          </form>
        </div>
      </div>
    </div>

      <%- include('../layout/sidebar'); -%>
    </div>
  </div>

  <%- include('../layout/footer'); -%>
</div>
